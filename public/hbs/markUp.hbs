{{#if this.todos.length}}
    {{#equals this.visibilityFilter "SHOW_ALL"}}
        {{#with ..}}
            {{#each this.todos}}
                {{#if completed}}
                    {{> completedListItem}}
                {{else}}
                    {{> pendingListItem}}
                {{/if}}
            {{/each}}
        {{/with}}
    {{/equals}}

    {{#equals this.visibilityFilter "SHOW_COMPLETED"}}
        {{#with ..}}
            {{#each this.todos}}
                {{#if completed}}
                    {{> completedListItem}}
                {{/if}}
            {{/each}}
        {{/with}}
    {{/equals}}

    {{#equals this.visibilityFilter "SHOW_PENDING"}}
        {{#with ..}}
            {{#each this.todos}}
                {{#unless completed}}
                    {{> pendingListItem}}
                {{/unless}}
            {{/each}}
        {{/with}}
    {{/equals}}

{{else}}
    {{> nothingToShow}}
{{/if}}